block topmenu
    nav.bg-dark.fixed-top.navbar.navbar-dark.navbar-expand-lg
            .navbar-brand
                include brand_header.pug
            button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarToggler", aria-controls="navbarTogglerDemo01", aria-expanded="false", aria-label="Toggle navigation")
                span.navbar-toggler-icon
            .collapse.navbar-collapse.ms-auto.flex-grow-0#navbarToggler
                ul.navbar-nav.ms-auto
                    li.nav-item
                        a.nav-link(href="/login")
                            i.fa.fa-home
                            span  Home
                    if(user)
                        if user.role==='admin'
                            li.nav-item
                                a.nav-link(href="/users") 
                                    i.fa.fa-link
                                    span  Users
                            li.nav-item.dropdown
                               a.nav-link.dropdown-toggle#navbarDropdownMenu(href="#", data-bs-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                                    i.fa.fa-cogs
                                    span  Devices
                               .dropdown-menu.dropdown-menu-right.dropdown-menu-dark
                                    a.dropdown-item(href="/addDevice") Register Device
                                    a.dropdown-item(href="/viewDevice") View Devices
                    li.nav-item
                        a.nav-link.disabled(href="#") Disabled
                    if(user)
                        li.nav-item.dropdown
                                a.nav-link.dropdown-toggle#navbarDropdownMenu(href="#", data-bs-toggle="dropdown", aria-haspopup="true", aria-expanded="false").badge.badge-warning
                                    i.fa.fa-user
                                    span   #{user.username||'anonymous'}
                                .dropdown-menu.dropdown-menu-right.dropdown-menu-dark
                                    a.dropdown-item(href="/Profile") Profile
                                    a.dropdown-item(href="/Notifications") Notifications
                                    a.dropdown-item(href="/Logout") Logout